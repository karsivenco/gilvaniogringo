          $jsonPath = __DIR__ . '/rascunhos.json';
          if (file_exists($jsonPath)) {
            $rascunhos = json_decode(file_get_contents($jsonPath), true);
            foreach (array_reverse($rascunhos) as $post) {
              echo '<div class="w-full max-w-md border rounded-xl shadow-lg p-5 hover:shadow-xl transition text-center bg-white">';
              echo '<h3 class="text-xl font-semibold text-[#005075] mb-2">' . htmlspecialchars($post['titulo']) . '</h3>';
              echo '<p class="text-gray-600 text-sm mb-2">' . htmlspecialchars($post['data']) . '</p>';
              echo '<p class="text-gray-700 mb-4">' . htmlspecialchars(mb_strimwidth($post['resumo'], 0, 120, '...')) . '</p>';
              if (!empty($post['link'])) {
                echo '<a href="' . htmlspecialchars($post['link']) . '" target="_blank" class="text-[#005075] font-medium hover:underline">Ver mais</a>';
              }
              echo '</div>';
            }
          } else {
            echo '<p class="text-red-600">Nenhum rascunho disponível.</p>';
          }
        ?>
